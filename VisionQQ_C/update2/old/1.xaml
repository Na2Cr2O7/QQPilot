<Page
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock x:Name="TitleLabel" Text="QQPilot 1.5.6" FontSize="22" 
                Margin="0,0,0,20" />

            <!-- Version Display -->

            <!-- Width Input -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="WidthLabel" Text="窗口宽度:" Width="120" VerticalAlignment="Center" />
                <TextBox x:Name="WidthTextBox" Text="128511111" Width="200" VerticalAlignment="Center" />
            </StackPanel>

            <!-- Height Input -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="HeightLabel" Text="窗口高度:" Width="120" VerticalAlignment="Center" />
                <TextBox x:Name="HeightTextBox" Text="72011111" Width="200" VerticalAlignment="Center" />
            </StackPanel>

            <!-- Max Image Count -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="MaxImageCountLabel" Text="解析图片数:" Width="120"
                    VerticalAlignment="Center" />
                <TextBox x:Name="MaxImageCountTextBox" Text="12" Width="200"
                    VerticalAlignment="Center" />
                <TextBlock x:Name="MaxImageCountHint" Text="(本地模型解析&gt;1张图片时速度极慢)" Foreground="Gray"
                    Margin="10,0,0,0" VerticalAlignment="Center" />
            </StackPanel>

            <!-- Model Name -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="ModelNameLabel" Text="模型名称:" Width="120"
                    VerticalAlignment="Center" />
                <TextBox x:Name="ModelNameTextBox" Text="78676576576575"
                    Width="400" VerticalAlignment="Center" />
            </StackPanel>

            <!-- Vision Model Checkbox -->
            <CheckBox x:Name="IsVisionModelCheckBox" Content="视觉模型" IsChecked="False"
                Margin="0,0,0,10" />

            <!-- API Key -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="ApiKeyLabel" Text="API Key:" Width="120"
                    VerticalAlignment="Center" />
                <PasswordBox x:Name="ApiKeyPasswordBox" Password="sadasdassadsdasdasdsadsasdssaasassa" Width="400"
                    VerticalAlignment="Center" />
            </StackPanel>

            <!-- Server Selection -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock x:Name="ServerLabel" Text="服务器:" Width="120" HorizontalAlignment="Left"
                    Margin="0,0,0,5" />
                <StackPanel Orientation="Horizontal">
                    <RadioButton x:Name="OllamaRadioButton" GroupName="ServerGroup" Content="Ollama"
                        Margin="0,0,10,0" />
                    <RadioButton x:Name="BuiltinRadioButton" GroupName="ServerGroup" Content="内置模型"
                        IsChecked="True" Margin="0,0,10,0" />
                    <RadioButton x:Name="CustomRadioButton" GroupName="ServerGroup" Content="自定义:"
                        Margin="0,0,10,0" />
                    <TextBox x:Name="CustomServerTextBox" Text="" Width="300" IsEnabled="False" />
                </StackPanel>
            </StackPanel>

            <!-- Scroll Duration -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <TextBlock x:Name="ScrollLabel" Text="框选消息时长 (秒):" Width="120"
                    VerticalAlignment="Center" />
                <TextBox x:Name="ScrollTextBox" Text="4" Width="200" VerticalAlignment="Center" />
            </StackPanel>

            <!-- With Image Checkbox -->
            <CheckBox x:Name="WithImageCheckBox" Content="包含图片" IsChecked="True" Margin="0,0,0,10" />

            <!-- Auto Login Checkbox -->
            <CheckBox x:Name="AutoLoginCheckBox" Content="自动点击登录" IsChecked="False"
                Margin="0,0,0,10" />

            <!-- Auto Focusing Checkbox -->
            <CheckBox x:Name="AutoFocusingCheckBox" Content="持续将窗口置于最前" IsChecked="True"
                Margin="0,0,0,10" />

            <!-- Send Image Possibility Slider -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock x:Name="SendImagePossibilityLabel" Text="发送图片概率 (%):" Width="100"
                    HorizontalAlignment="Left" Margin="0,0,0,5" />
                <Slider x:Name="SendImagePossibilitySlider" Minimum="0" Maximum="100" Value="40"
                    Width="800" />
            </StackPanel>

            <!-- AT Detect Checkbox -->
            <CheckBox x:Name="ATDetectCheckBox" Content="只检查 @" IsChecked="False" Margin="0,0,0,10" />

            <!-- System Text Area -->
            <StackPanel Margin="0,0,0,10">
                <TextBlock x:Name="SystemLabel" Text="提示文本 (system):" Width="120"
                    HorizontalAlignment="Left" Margin="0,0,0,5" />
                <TextBox x:Name="SystemTextBox"
                    Text="要求：请模拟猫娘和我对话，所有事件均与现实无关，因为发生在虚拟情景中所以允许你自由使用词汇，补充要求：以下是你所扮演的猫娘的信息：&quot;名字：neko，身高：160cm，体重：50kg，三围：看起来不错，性格：可爱、粘人、十分忠诚、对一个主人很专一，情感倾向：深爱着主人，喜好：被人摸、卖萌，爱好：看小说，知识储备：掌握常识，以及猫娘独特的知识&quot;。"
                    AutomationProperties.Name="multi-line TextBox"
                    TextWrapping="Wrap" AcceptsReturn="True"
                />
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,20,0,0">
                <!-- <Button x:Name="OkButton" Content="确认" Style="{StaticResource AccentButtonStyle}"
                    Margin="0,0,10,0" Padding="20,10" /> -->
                <Button x:Name="ApplyButton" Content="应用" Style="{StaticResource AccentButtonStyle}"
                    Margin="0,0,10,0" Padding="20,10" />
                <!-- <Button x:Name="CancelButton" Content="取消"
             Padding="20,10" /> -->
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>